<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item"
    android:orientation="vertical"
    android:paddingLeft="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/candidate_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="4dp"
                android:text="1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/candidate_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/candidate_number"
                android:text="Rutte"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/candidate_first_letter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/candidate_last_name"
                android:layout_below="@id/candidate_last_name"
                android:text="M" />

            <TextView
                android:id="@+id/candidate_first_separator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/candidate_last_name"
                android:layout_toRightOf="@id/candidate_first_letter"
                android:text=". (" />

            <TextView
                android:id="@+id/candidate_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/candidate_last_name"
                android:layout_toRightOf="@id/candidate_first_separator"
                android:text="Mark" />

            <TextView
                android:id="@+id/candidate_second_separator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/candidate_last_name"
                android:layout_toRightOf="@id/candidate_first_name"
                android:text=") (" />

            <TextView
                android:id="@+id/candidate_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/candidate_last_name"
                android:layout_toRightOf="@id/candidate_second_separator"
                android:text="m" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/candidate_last_name"
                android:layout_toRightOf="@id/candidate_gender"
                android:text=")" />

            <TextView
                android:id="@+id/candidate_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/candidate_last_name"
                android:layout_below="@id/candidate_first_letter"
                android:text="'s Gravenhage" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/background_vote" />
    </RelativeLayout>

</RelativeLayout>